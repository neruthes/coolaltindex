<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%- wwwpath %> | <%- config.siteName %></title>
    <style>
        html, body {
            /* font-family: -apple-system, 'SC Pro Text', 'Noto Sans', 'Open Sans', 'Roboto', 'Ubuntu', 'PingFang SC', 'Noto Sans CJK SC', 'Hiragino Sans GB', sans-serif; */
            padding: 0;
            margin: 0;
        }
        .grand-container {
            max-width: 900px;
            padding: 30px;
            margin: 0 auto;
        }
        
        .header-title {
            font-size: 20px;
            font-weight: bold;
            padding: 10px 0;
        }
        .header-nav {
            font-size: 15px;
            padding: 50px 0;
        }
        .header-nav a {
            color: #07D;
            text-decoration: none;
        }
        
        
        .grand-content {
            font-family: 'JetBrains Mono NL', 'JetBrains Mono', 'Ubuntu Mono', 'Noto Mono', 'Fira Code', monospace, -apple-system, 'SC Pro Text', 'Noto Sans', 'Open Sans', 'Roboto', 'Ubuntu', 'PingFang SC', 'Noto Sans CJK SC', 'Hiragino Sans GB' !important;
            border-top: 1px solid #AAA;
            border-bottom: 1px solid #AAA;
            padding: 50px 0;
        }
        a.dir-entity-item::before {
            text-align: center;
            display: inline-block;
            width: 20px;
            margin-right: 10px;
        }
        a.dir-entity-item.type-dir::before {
            content: "ðŸ–¿";
        }
        a.dir-entity-item.type-file::before {
            content: "ðŸ—Ž";
        }
        a.dir-entity-item {
            font-size: 18px;
            color: #000;
            text-decoration: none;
            display: inline-block;
            padding: 2px 0px;
            margin: 0 0 16px;
            border-radius: 1px;
        }
        a.dir-entity-item:hover {
            background: #EEE;
            box-shadow: #EEE 0 0 0 7px;
        }
        
        
        .grand-footer {
            font-size: 13px;
            padding: 100px 0 0;
        }
    </style>
</head>

<body>
    <div class="grand-container">
        <div class="grand-header">
            <div>
                <header>
                    <div class="header-title"><%- config.siteName %></div>
                    <div class="header-nav">
                        <a href="/">(Root)</a> /
                        <%- pageChain ? pageChain.map(function (x, i, arr) {
                            return `<a href="/${arr.slice(0, i+1).join('/')}/">${x}</a>`;
                        }).join(' / ') : '' %>
                        <h1><%- pageChain ? pageTitle : '' %></h1>
                    </div>
                </header>
            </div>
        </div>
        <div class="grand-content">
            <!-- <div class="metadata">
                <div>req.url: <%- runtime.env.url  %></div>
                <div>$uri: <%- wwwpath  %></div>
                <div>$request_filename: <%- fspath  %></div>
            </div> -->
            
            <div class="list-dirs">
                <% dirsList.map(function (itemName) { %>
                    <a class="dir-entity-item type-dir"                     href="<%- (itemName) %>/"   ><%- itemName %>/</a><br>
                <% }) %>
            </div>

            <div class="list-files">
                <% filesList.map(function (itemName) { %>
                    <a class="dir-entity-item type-file" target="_blank"    href="<%- (itemName) %>"    ><%- itemName %></a><br>
                <% }) %>
            </div>
        </div>
        <footer class="grand-footer">
            <div><%- config.copyrightLine %></div>
        </footer>
    </div>
</body>

</html>